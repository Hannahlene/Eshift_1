@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Assistant
@{
    ViewData["Title"] = "Assistant Details";
}

<style>
    .container {
        background-color: #f8fafc; /* Light background */
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        max-width: 700px;
    }

    h1 {
        color: #0ea5e9; /* Sky-500 */
        font-weight: 700;
        letter-spacing: 1px;
    }

    dt {
        font-weight: 600;
        color: #334155; /* Slate-700 */
        font-size: 1rem;
    }

    dd {
        color: #1e293b; /* Slate-800 */
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    .btn-primary {
        background-color: #2563eb;
        border-color: #2563eb;
        font-weight: 600;
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
        transition: 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #1d4ed8;
        border-color: #1d4ed8;
    }

    .btn-secondary {
        background-color: #64748b;
        border-color: #64748b;
        font-weight: 600;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

    .btn-secondary:hover {
        background-color: #475569;
        border-color: #475569;
        color: #fff;
    }

    .shadow-sm {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
    }

    .card {
        border-radius: 16px;
    }

    .me-2 {
        margin-right: 0.5rem !important;
    }
</style>

<div class="container mx-auto">
    <h1 class="text-center mb-4">Assistant Details: @Model.Name</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <dl class="row mb-4">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </dl>

            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.AssistantId" class="btn btn-primary me-2 shadow-sm">Edit</a>
                <a asp-action="Index" class="btn btn-secondary shadow-sm">Back to List</a>
            </div>
        </div>
    </div>
</div>
