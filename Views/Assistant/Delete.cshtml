@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Assistant
@{
    ViewData["Title"] = "Delete Assistant";
}

<style>
    .container {
        background-color: #f8fafc;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        max-width: 700px;
    }

    h1 {
        color: #dc2626; /* Red-600 */
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    h3 {
        color: #64748b; /* Slate-500 */
        font-weight: 500;
    }

    dt {
        font-weight: 600;
        color: #334155;
        font-size: 1rem;
    }

    dd {
        color: #1e293b;
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        font-weight: 600;
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
        transition: 0.3s ease-in-out;
    }

    .btn-danger:hover {
        background-color: #b91c1c;
        border-color: #b91c1c;
    }

    .btn-secondary {
        background-color: #64748b;
        border-color: #64748b;
        font-weight: 600;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

    .btn-secondary:hover {
        background-color: #475569;
        border-color: #475569;
        color: #fff;
    }

    .card {
        border-radius: 16px;
    }

    .me-2 {
        margin-right: 0.5rem !important;
    }
</style>

<div class="container mx-auto py-5">
    <h1 class="text-center mb-4">Delete Assistant</h1>
    <h3 class="text-center mb-5">Are you sure you want to delete this assistant?</h3>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <dl class="row mb-4">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Model.Phone</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="AssistantId" />
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-danger me-2 shadow-sm">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
