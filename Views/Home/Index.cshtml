@{
    ViewData["Title"] = "Customer";
}

<!-- Hero Section -->
<div class="home-hero py-5 text-white text-center" style="background: linear-gradient(135deg, #1f3c88, #29b6f6);">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Delivering Convenience, Every Step of the Way
</h1>
        <p class="lead mb-4">Seamless and Secure Household Goods Relocation — Anytime, Anywhere.
    </p>
        <a asp-controller="MyJob" asp-action="RequestJob" class="btn btn-light btn-lg px-4 shadow-sm">
            Request a Job Now <i class="bi bi-arrow-right ms-2"></i>
        </a>
    </div>
</div>

<!-- About Section -->
<div class="container my-5">
    <section class="text-center">
        <h2 class="fw-bold text-dark mb-4">Simplifying Your Move with Confidence</h2>
        <p class="lead text-muted mb-5">
           At <strong>EShift</strong>, we match you with reliable transport partners, ensuring your belongings are moved with care, speed, and transparency.
        </p>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-box-seam-fill display-4 text-primary mb-3"></i>
                        <h5 class="fw-semibold">📦 Smart Shipment Management</h5>
                        <p class="text-muted">Easily schedule, customize, and oversee your shipment details — with live progress updates.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-truck-front display-4 text-success mb-3"></i>
                        <h5 class="fw-semibold">🚛 Verified Transport Partners</h5>
                        <p class="text-muted">Count on our network of trusted drivers and transport units to deliver without delay or damage.

</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-lg h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-geo-alt-fill display-4 text-danger mb-3"></i>
                        <h5 class="fw-semibold">📍 Live Delivery Tracking</h5>
                        <p class="text-muted">Stay informed at every step with real-time location tracking and notifications from dispatch to arrival.
</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Testimonials Section -->
<div class="bg-light py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4 text-dark">What Our Customers Say</h2>

        <div class="row mb-5">
            <div class="col-md-6">
                <blockquote class="blockquote text-muted">
                    <p>"EShift made our relocation effortless. The system is intuitive and the team provided outstanding service."</p>
                    <footer class="blockquote-footer">— <em>Jane Doe, ABC Logistics</em></footer>
                </blockquote>
            </div>
            <div class="col-md-6">
                <blockquote class="blockquote text-muted">
                    <p>Thanks to EShift, we optimized our delivery process and minimized delays. Great support and visibility.</p>
                    <footer class="blockquote-footer">— <em>John Smith, Smith Supplies</em></footer>
                </blockquote>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="rounded-3 py-4 bg-white shadow-sm border">
                    <h3 class="text-primary display-5 fw-bold">500+</h3>
                    <p class="text-muted mb-0">Satisfied Customers
</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="rounded-3 py-4 bg-white shadow-sm border">
                    <h3 class="text-success display-5 fw-bold">1000+</h3>
                    <p class="text-muted mb-0">Successful Deliveries

</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="rounded-3 py-4 bg-white shadow-sm border">
                    <h3 class="text-danger display-5 fw-bold">99%</h3>
                    <p class="text-muted mb-0">On-Time Delivery Rate
</p>
                </div>
            </div>
        </div>
    </div>
</div>
