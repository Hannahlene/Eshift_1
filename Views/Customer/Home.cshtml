@{
    ViewData["Title"] = "Customer Home";
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@ViewData["SuccessMessage"]</div>
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary mb-3 fw-bold">Welcome to Your EShift Portal</h1>
        <p class="lead text-secondary">
            Effortless household goods transport at your fingertips — reliable, transparent, and tailored for you.
        </p>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-sm rounded-4 p-5 bg-gradient-primary text-white text-center">
                <h2 class="mb-3 fw-semibold">Ready to Move?</h2>
                <p class="mb-4 fs-5">
                    Quickly request your next household goods transport job — tell us your destination, and leave the rest to us.
                </p>
                <a asp-controller="MyJob" asp-action="RequestJob" class="btn btn-light btn-lg rounded-pill fw-semibold shadow-sm btn-hover-scale">
                    <i class="bi bi-truck me-2"></i> Request a Job Now
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="feature-card p-4 rounded-4 shadow-sm">
                <i class="bi bi-box-seam display-4 text-primary mb-3"></i>
                <h3 class="h5 fw-semibold mb-2">Track Shipments</h3>
                <p class="text-muted mb-3">Monitor your goods in real time from pickup to delivery.</p>
                <a asp-controller="MyJob" asp-action="Index" class="btn btn-outline-primary btn-sm rounded-pill px-4">
                    View My Jobs
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card p-4 rounded-4 shadow-sm">
                <i class="bi bi-tag display-4 text-info mb-3"></i>
                <h3 class="h5 fw-semibold mb-2">Manage Products</h3>
                <p class="text-muted mb-3">Define and organize your frequently shipped items for faster job creation.</p>
                <a asp-controller="MyProduct" asp-action="Index" class="btn btn-outline-info btn-sm rounded-pill px-4">
                    My Products
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card p-4 rounded-4 shadow-sm">
                <i class="bi bi-person-circle display-4 text-success mb-3"></i>
                <h3 class="h5 fw-semibold mb-2">Profile Settings</h3>
                <p class="text-muted mb-3">Update your contact details and preferences anytime.</p>
                <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-success btn-sm rounded-pill px-4">
                    Edit Profile
                </a>
            </div>
        </div>
        <div class="col-md-4 mx-auto">
            <div class="feature-card p-4 rounded-4 shadow-sm">
                <i class="bi bi-headset display-4 text-warning mb-3"></i>
                <h3 class="h5 fw-semibold mb-2">Customer Support</h3>
                <p class="text-muted mb-3">Need help? Our team is ready to assist you with any questions.</p>
                <a href="mailto:support@EShift.com" class="btn btn-outline-warning btn-sm rounded-pill px-4">
                    Contact Support
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Modern fresh color palette */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #2563EB, #3B82F6);
    }

    .btn-hover-scale {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }
    .btn-hover-scale:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgb(59 130 246 / 0.5);
    }

    .feature-card {
        background-color: #fff;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        cursor: default;
    }
    .feature-card:hover {
        box-shadow: 0 10px 30px rgb(37 99 235 / 0.3);
        transform: translateY(-5px);
    }

    .feature-card i {
        font-size: 3.5rem;
    }

    /* Typography tweaks */
    h1, h2, h3 {
        letter-spacing: 0.03em;
    }
</style>
