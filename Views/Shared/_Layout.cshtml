<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EShift</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EShift.styles.css" asp-append-version="true" />

    <!-- Google Fonts: Poppins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9fafb;
            color: #374151;
        }
        header nav {
            background: linear-gradient(90deg, #2563EB 0%, #3B82F6 100%);
        }
        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            letter-spacing: 0.05em;
            color: #ffffff !important;
        }
        .nav-link {
            color: rgba(255,255,255,0.85) !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .nav-link:hover, .nav-link:focus {
            color: #FBBF24 !important; /* Amber-400 */
        }
        .btn-outline-light {
            border-color: rgba(255,255,255,0.7);
            color: rgba(255,255,255,0.9);
            font-weight: 600;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .btn-outline-light:hover {
            background-color: #FBBF24;
            border-color: #FBBF24;
            color: #1F2937; /* dark text */
        }
        .btn-light {
            font-weight: 600;
            color: #2563EB;
            background-color: #f3f4f6;
            transition: background-color 0.3s ease;
        }
        .btn-light:hover {
            background-color: #DBEAFE;
            color: #1D4ED8;
        }
        footer {
            background-color: #f3f4f6;
            font-size: 0.9rem;
            color: #6B7280;
        }
        footer a {
            color: #2563EB;
            text-decoration: none;
            font-weight: 600;
        }
        footer a:hover {
            text-decoration: underline;
        }
        /* Navbar toggler icon (custom white) */
        .navbar-toggler {
            border-color: rgba(255,255,255,0.7);
        }
        .navbar-toggler-icon {
            filter: invert(1);
        }
    </style>
</head>
<body>
    <header class="shadow-sm sticky-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EShift</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-6">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Home">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </li>
                        @* Add more nav items as needed *@
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="btn btn-outline-light btn-sm px-3">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" class="btn btn-outline-light btn-sm px-3" asp-action="Login">Login</a>
                            <a asp-controller="Account" class="btn btn-light btn-sm px-3" asp-action="Register">Sign Up</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-5 min-vh-75">
        @RenderBody()
    </main>

    <footer class="border-top py-4 text-center">
        <div class="container">
            <small>
                &copy; 2025 EShift. All rights reserved. &nbsp;|&nbsp; 
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
