@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Driver
@{
    ViewData["Title"] = "Driver Details";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-info fw-bold">Driver Details: @Model.Name</h1>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Html.DisplayNameFor(model => model.LicenseNumber)
                        </dt>
                        <dd class="col-sm-8 fs-5">
                            @Html.DisplayFor(model => model.LicenseNumber)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.DriverId" class="btn btn-primary rounded-pill px-4 shadow-sm fw-semibold">
                            <i class="bi bi-pencil-square me-2"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm fw-semibold">
                            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
