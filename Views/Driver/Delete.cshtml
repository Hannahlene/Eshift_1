@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Driver
@{
    ViewData["Title"] = "Delete Driver";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-danger fw-bold">Delete Driver</h1>
    <h4 class="text-center mb-5 text-muted">Are you sure you want to delete this driver?</h4>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Name:</dt>
                        <dd class="col-sm-8 fs-5">@Model.Name</dd>

                        <dt class="col-sm-4 fw-semibold">Phone:</dt>
                        <dd class="col-sm-8 fs-5">@Model.Phone</dd>

                        <dt class="col-sm-4 fw-semibold">License Number:</dt>
                        <dd class="col-sm-8 fs-5">@Model.LicenseNumber</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="DriverId" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm fw-semibold">
                                <i class="bi bi-trash-fill me-2"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm fw-semibold">
                                <i class="bi bi-x-circle me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
