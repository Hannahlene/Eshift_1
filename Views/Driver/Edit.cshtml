@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Driver
@{
    ViewData["Title"] = "Edit Driver";
}

<div class="container py-5">
    <h1 class="text-center mb-4 text-warning fw-bold">Edit Driver</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="DriverId" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control rounded-pill px-4 py-2 shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label fw-semibold"></label>
                            <input asp-for="Phone" class="form-control rounded-pill px-4 py-2 shadow-sm" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="LicenseNumber" class="form-label fw-semibold"></label>
                            <input asp-for="LicenseNumber" class="form-control rounded-pill px-4 py-2 shadow-sm" />
                            <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning rounded-pill px-4 shadow-sm fw-semibold">
                                <i class="bi bi-save2 me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm fw-semibold">
                                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
