@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Lorry
@{
    ViewData["Title"] = "Delete Lorry";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 4rem auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
        padding: 2rem 2.5rem;
    }

    h1 {
        color: #dc3545; /* Bootstrap danger color */
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
    }

    h3 {
        text-align: center;
        color: #6c757d; /* muted */
        font-weight: 500;
        margin-bottom: 2.5rem;
    }

    dt {
        font-weight: 600;
        color: #343a40;
    }

    dd {
        color: #495057;
        font-size: 1.1rem;
    }

    .btn-danger {
        border-radius: 8px;
        padding: 0.5rem 1.8rem;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #b02a37;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 0.5rem 1.8rem;
        font-weight: 600;
    }

    .btn + .btn {
        margin-left: 1rem;
    }
</style>

<div class="delete-container">
    <h1>Delete Lorry</h1>
    <h3>Are you sure you want to delete this lorry?</h3>

    <dl class="row mb-4">
        <dt class="col-sm-4">Number Plate:</dt>
        <dd class="col-sm-8">@Model.NumberPlate</dd>

        <dt class="col-sm-4">Model:</dt>
        <dd class="col-sm-8">@Model.Model</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LorryId" />
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
