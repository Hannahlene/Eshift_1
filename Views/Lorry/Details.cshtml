@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EShift.Models.Lorry
@{
    ViewData["Title"] = "Lorry Details";
}

<style>
    .details-container {
        max-width: 700px;
        margin: 3rem auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
        padding: 2.5rem 3rem;
    }

    h1 {
        color: #0dcaf0; /* Bootstrap info color */
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
    }

    dt {
        font-weight: 600;
        color: #264653;
    }

    dd {
        color: #555;
        font-size: 1.1rem;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
        box-shadow: 0 4px 10px rgba(13,202,240,0.3);
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #0b8ecf;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
    }
</style>

<div class="details-container">
    <h1>Lorry Details: @Model.NumberPlate</h1>

    <dl class="row mb-4">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NumberPlate)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NumberPlate)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.LorryId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
